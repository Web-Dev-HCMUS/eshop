<link rel="stylesheet" href="/assets/css/flex-slider.css">
<link rel="stylesheet" href="/assets/css/owl.css">
<script src="/vendor/jquery/jquery.min.js"></script>
<!-- Page Content -->
<!-- Single Starts Here -->
<div class="single-product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h1>Single Product</h1>
                </div>
            </div>
            <div class="col-md-6">
                <div class="product-slider">

                    <div id="slider" class="flexslider">
                        <ul class="slides">
                            {{#each product.image}}
                                <li>
                                    <img src="{{this}}" alt="Item {{sum @index 1}}">
                                </li>
                            {{/each}}
                            <!-- items mirrored twice, total of 12 -->
                        </ul>
                    </div>
                    <div id="carousel" class="flexslider">
                        <ul class="slides">
                            {{#each product.image}}
                                <li>
                                    <img src="{{this}}" alt="Item {{sum @index 1}}">
                                </li>
                            {{/each}}
                            <!-- items mirrored twice, total of 12 -->
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="right-content">
                    <div id="productId" style="display: none;">{{product._id}}</div>
                    <h4>{{product.name}}</h4>
                    <h6>{{product.price}}</h6>
                    <p>{{product.description}} </p>
                    <span>{{product.stock}} left on stock</span>
                    <form action="" method="get">
                        <label for="quantity">Quantity:</label>
                        <input name="quantity" type="quantity" class="quantity-text" id="quantity"
                               onfocus="if(this.value == '1') { this.value = ''; }"
                               onBlur="if(this.value == '') { this.value = '1';}"
                               value="1">
                        <input type="submit" class="button"id='addToCart' value="Order Now!">
                    </form>
                    <div class="down-content">
                        <div class="categories">
                            <h6>Category: <span><a href="#">{{product.type}}</a>,<a href="#">{{product.name}}</a></span></h6>
                        </div>
                        <div class="share">
                            <h6>Share: <span><a href="#"><i class="fa fa-facebook"></i></a><a href="#"><i class="fa fa-linkedin"></i></a><a href="#"><i class="fa fa-twitter"></i></a></span></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Single Page Ends Here -->


<!-- Similar Starts Here -->
<div class="featured-items">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h1>You May Also Like</h1>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="owl-carousel owl-theme">
                        {{#each products2}}
                            <a href="/detail-product/{{this.slug}}">
                                <div class="featured-item">
                                    <img src="{{getValue this.image 0}}" alt="Item 1">
                                    <h4>{{this.name}}</h4>
                                    <h6>{{this.price}}</h6>
                                </div>
                            </a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Similar Ends Here -->
<script type="text/javascript">
    
    document.getElementById('addToCart').addEventListener('click',(event)=>{
        event.preventDefault();
       
        let quantity = document.getElementById('quantity').value;
        let productId = document.getElementById('productId').innerHTML;
        console.log(quantity);
        console.log(productId);
        $.post('/api/cart/add',{
            productId:productId,
            quantity:quantity
        },(data)=>{
            console.log(data);
            if(data.success){
               
                alert(data.message);
            }
        }).fail((err)=>{
            alert(data.message);
            window.location.href = '/auth/login';
        });
    })
</script>